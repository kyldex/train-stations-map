{
  "compilerOptions": {
    "outDir": "./dist/",
    "strict": true,
    "allowJs": true,
    // Import non-ES modules as default imports.
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "es2015",
    "target": "es2018",
    "moduleResolution": "node",
    "sourceMap": true,
    // Fix maplibre-gl error.
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
